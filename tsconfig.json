{
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types", "./types"],
		"types": ["node"],
		"lib": ["es5", "es6"],
		"target": "ES2021", 
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": false
	},
	"include": [
		"**/*.ts"
	],	
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"src/app/db/*/client/**"
	]
}